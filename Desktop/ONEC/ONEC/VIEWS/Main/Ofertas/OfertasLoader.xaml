<Page x:Class="ONEC.VIEWS.Main.Ofertas.OfertasLoader"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ONEC.VIEWS.Main.Ofertas"
      xmlns:fa="http://schemas.fontawesome.io/icons/"
      mc:Ignorable="d" 
      Height="Auto"
      Width="Auto"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="OfertasLoader">
    <Border Background="#333542">
        <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <fa:ImageAwesome Icon="CircleOutlineNotch" Spin="True" Height="100" Width="100"  Foreground="#fcffff"/>
            <Label Grid.Row="1" Foreground="#fcffff" FontSize="25" HorizontalAlignment="Center" Content="Cargando..." Margin="0,5,0,0"/>
        </Grid>
    </Border>
</Page>
