<Window x:Class="ONEC.VIEWS.Loading.Loading"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ONEC.VIEWS.Loading"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        mc:Ignorable="d"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterOwner"
        Title="Loading" Height="150" Width="200"
        ResizeMode="NoResize" Closing="Window_Closing"
        >
    <Border CornerRadius="7" Background="#333542">
        <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <fa:ImageAwesome Icon="CircleOutlineNotch" Spin="True" Height="40" Width="40"  Foreground="#fcffff"/>
            <Label Grid.Row="1" Foreground="#fcffff" FontSize="16" HorizontalAlignment="Center" Content="Cargando..." Margin="0,5,0,0"/>
        </Grid>
    </Border>
</Window>
